                 <div class="col-12 mt-5">
                    <form action="/status" method="post">

                        <h2 class="text-center text-primary">Category: <%=name%></h2>
                        <h2 class="text-center text-success">Room Type: <%=type%></h2>
                        
                    
                        <div class="col-lg-4 col-md-12 col-md-12 position">
                            <input type="hidden" name="name" value="<%=name%>">
                            <input type="hidden" name="type" value="<%=type%>">
                            
                    
                        
                    
                            <div class="boking-tittle text-center mt-3 mb-3">
                                <span>Name:</span>
                                <input name="personname" type="text" class="form-control" required placeholder="Name" />
                            </div>
                    
                            <div class="booking-title text-center mt-3 mb-3">
                                <span>National ID:</span>
                                <input name="nationalID" type="number" class="form-control" required maxlength="14" placeholder="National ID" />
                            </div>
                            
                    
                            <div class="boking-tittle text-center mt-3 mb-3">
                                <span>University Name:</span>
                                <input name="universityName" type="text" class="form-control" required placeholder="University Name" />
                            </div>
                    
                            <div class="boking-tittle text-center mt-3 mb-3">
                                <span>College Year:</span>
                                <input name="collegeYear" type="text" class="form-control" required placeholder="College Year" />
                            </div>
                    
                            <div class="boking-tittle text-center mt-3 mb-3">
                                <span>Birthday:</span>
                                <input name="birthday" type="date" class="form-control" required />
                            </div>
                    
                            <div class="booking-title text-center mt-3 mb-3">
                                <span>Phone Number:</span>
                                <input name="phoneNumber" type="number" class="form-control" required pattern="01\d{9}" maxlength="11" placeholder="Phone Number" />
                            </div>
                            
                    
                            <div class="booking-title text-center mt-3 mb-3">
                                <form>
                                  <label class="stay-period-label">Stay Period:</label>
                                  <select name="stayPeriod" class="form-control" required onchange="toggleDaysInput(this); calculatePrice(this)">
                                    <option value="">Select Stay Period</option>
                                    <option value="year">Year</option>
                                    <option value="semester">First Semester</option>
                                    <option value="semester">Second Semester</option>
                                    <option value="3months">3 Months</option>
                                    <option value="days">Days</option>
                                  </select>
                              
                                  <div class="booking-title text-center mt-3 mb-3" id="daysInput" style="display: none;">
                                    <span>Number of Days:</span>
                                    <input name="numberOfDays" type="number" class="form-control" placeholder="Number of Days" oninput="calculatePrice(this)" />
                                  </div>
                              
                                  <div class="booking-title text-center mt-3 mb-3">
                                    <span>Fees:</span>
                                    <span id="totalFees"></span>
                                  </div>
                              
                                  <div class="booking-title text-center mt-3 mb-3">
                                    <span>Insurance Fees:</span>
                                    <span id="insuranceFeesValue">500</span>
                                  </div>
                              
                                  <div class="booking-title text-center mt-3 mb-3">
                                    <span>Total:</span>
                                    <span id="totalValue"></span>
                                  </div>
                              
                                  <script>
                                    function toggleDaysInput(selectElement) {
                                      var daysInput = document.getElementById('daysInput');
                                      if (selectElement.value === 'days') {
                                        daysInput.style.display = 'block';
                                      } else {
                                        daysInput.style.display = 'none';
                                      }
                                    }
                              
                                    function calculatePrice(inputElement) {
                                      var feesValue = document.getElementById('feesValue');
                                      var insuranceFeesValue = document.getElementById('insuranceFeesValue');
                                      var totalValue = document.getElementById('totalValue');
                              
                                      var numberOfDays = parseInt(inputElement.value);
                                      var dayFee = 3;
                                      var fees = numberOfDays * dayFee;
                              
                                      feesValue.textContent = fees;
                              
                                      var totalFees = 0;
                              
                                      // Calculate fees for the selected stay period
                                      var stayPeriod = document.getElementsByName('stayPeriod')[0].value;
                                      switch (stayPeriod) {
                                        case 'year':
                                          totalFees = dayFee * 365;
                                          break;
                                        case 'semester':
                                          totalFees = dayFee* 90; // Assuming each semester is 180 days
                                          break;
                                        case '3months':
                                          totalFees = dayFee * 90;
                                          break;
                                        case 'days':
                                          totalFees = fees;
                                          break;
                                        default:
                                          totalFees = 0;
                                      }
                              
                                      var totalInsuranceFees = parseFloat(insuranceFeesValue.textContent);
                                      var totalPrice = totalFees + totalInsuranceFees;
                                      totalValue.textContent = totalPrice.toFixed(2);
                                    }
                                  </script>
                              
                                  <div class="col-lg-12 col-md-12 col-sm-12 text-right">
                                    <input type="submit" class="btn btn-info mt-3 mb-5 positionbtn" value="Confirm Booking">
                                  </div>
                                </form>
                              </div>
                              
                              <!-- Adding a big space -->
                              <div style="height: 200px;"></div>
                              
                            
                            

